<div class="container">
  <div class="row">
    <% data.cities.each do |city| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: url('<%= city.picture %>')">
          <h2><%= city.name %></h2>
          <p><%= city.address %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
